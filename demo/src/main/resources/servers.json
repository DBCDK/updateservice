[
    {
        "type": "postgresql",
        "configuration": {
            "homedir": "postgres",
            "artifact": "${postgresql.url}",
            "port": "${postgresql.port}"
        }
    },
    {
        "type": "postgressql-database",
        "configuration": {
            "homedir": "${postgresql.rawrepo.name}-db",
            "name": "${postgresql.rawrepo.name}",
            "postgresql": {
                "homedir": "postgres",
                "port": "${postgresql.port}"
            },
            "schemas": [
                {
                    "url": "https://svn.dbc.dk/repos/rawrepo/trunk/access/schema/rawrepo.sql"
                },
                {
                    "url": "https://svn.dbc.dk/repos/rawrepo/trunk/access/schema/queuerules.sql"
                }
            ]
        }
    },
    {
        "type": "postgressql-database",
        "configuration": {
            "homedir": "${postgresql.holdings.name}-db",
            "name": "${postgresql.holdings.name}",
            "postgresql": {
                "homedir": "postgres",
                "port": "${postgresql.port}"
            },
            "schemas": [
                {
                    "url": "https://svn.dbc.dk/repos/holdings-items/trunk/access/schema/holdingsitems.sql"
                },
                {
                    "url": "https://svn.dbc.dk/repos/holdings-items/trunk/access/schema/queuerules.sql"
                }
            ]
        }
    },
    {
        "type": "glassfish",
        "configuration": {
            "homedir": "glassfish",
            "artifact": "${deploy.artifacts.directory}/${glassfish.artifact}",
            "domains": [
                {
                    "name": "dataio",
                    "portbase": "${glassfish.domain.dataio.portbase}",
                    "config": "domain-dataio.xml",
                    "libs": [
                        {
                            "url": "${deploy.artifacts.directory}/${postgresql.jdbc.artifact}"
                        }
                    ]
                },
                {
                    "name": "fbs",
                    "portbase": "${glassfish.domain.fbs.portbase}",
                    "config": "domain-fbs.xml",
                    "libs": [
                        {
                            "url": "${deploy.artifacts.directory}/${postgresql.jdbc.artifact}"
                        }
                    ]
                }
            ]
        }
    }
]
