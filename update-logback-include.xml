<included>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>${UPDATE_LOGBACK_FILENAME}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches nnMB -->
                <maxFileSize>1024MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>

        <encoder>
            <pattern>%date %level [%thread] [Update:%X{trackingId}] %logger{35} [%file:%line] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ************************************************************* -->
    <!-- Perf4j                                                        -->
    <!-- ************************************************************* -->
    <appender name="Perf4jStatistics" class="org.perf4j.logback.AsyncCoalescingStatisticsAppender">
        <param name="TimeSlice" value="30000" />
        <appender-ref ref="FILE" />
    </appender>

    <logger name="org.perf4j.TimingLogger">
        <level value="INFO"/>
        <appender-ref ref="Perf4jStatistics"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- ************************************************************* -->
    <!-- UpdateService                                                 -->
    <!-- ************************************************************* -->
    <logger name="dk.dbc.updateservice" level="DEBUG">
        <level value="DEBUG"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- ************************************************************* -->
    <!-- RawRepo                                                       -->
    <!-- ************************************************************* -->
    <logger name="dk.dbc.rawrepo.RawRepoDAO" level="DEBUG">
        <level value="DEBUG"/>
        <appender-ref ref="FILE"/>
    </logger>

</included>
