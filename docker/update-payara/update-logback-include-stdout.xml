<included>
    <appender name="UPDATE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %level [%thread] [Update:%X{trackingId}] %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="BUILD" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %level [%thread] [Build:%X{trackingId}] %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %level [%thread] [Update:%X{trackingId}] %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--<logger name="org.perf4j.TimingLogger">
        <level value="INFO"/>
        <appender-ref ref="STDOUT"/>
    </logger>-->
    <logger name="dk.dbc.updateservice">
        <level value="DEBUG"/>
        <appender-ref ref="UPDATE"/>
    </logger>
    <logger name="dk.dbc.buildservice">
        <level value="DEBUG"/>
        <appender-ref ref="BUILD"/>
    </logger>
    <logger name="JavaScript.Logger">
        <level value="DEBUG"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="dk.dbc.rawrepo">
        <level value="DEBUG"/>
        <appender-ref ref="STDOUT"/>
    </logger>
</included>
